<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:id="@+id/sd_item"
    android:orientation="vertical"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/searchdoctor_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/add_profile"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:orientation="vertical"
            android:weightSum="3">

            <TextView
                android:id="@+id/searchdoctor_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="DR. Amir Hamza"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/blue"/>

            <TextView
                android:id="@+id/searchdoctor_special"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_regular"
                android:text="Medical Specialist"/>

            <TextView
                android:id="@+id/searchdoctor_booknow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:background="@drawable/book_now_background"
                android:paddingLeft="6dp"
                android:paddingTop="3dp"
                android:paddingRight="6dp"
                android:paddingBottom="3dp"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/booknow"
                android:textColor="@color/colorPrimary"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>