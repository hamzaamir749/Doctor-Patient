<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:id="@+id/bookingMenu_item"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="5dp"
        app:cardCornerRadius="8dp">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:padding="5dp">

               <de.hdodenhof.circleimageview.CircleImageView
                   android:id="@+id/bookingMenu_image"
                   android:layout_width="60dp"
                   android:layout_height="60dp"
                   android:src="@drawable/add_profile"/>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_marginLeft="5dp"
                   android:orientation="vertical"
                   android:weightSum="3">

                   <TextView
                       android:id="@+id/bookingMenu_name"
                       android:layout_weight="1"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:hint="Dr. Amir Hamza"
                       android:textSize="14sp"
                       android:fontFamily="@font/poppins_regular"
                       android:textStyle="bold"/>

                   <TextView
                       android:id="@+id/bookingMenu_hospital"
                       android:layout_weight="1"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:ellipsize="end"
                       android:fontFamily="@font/poppins_regular"
                       android:hint="PAF Hospital Chakwal"
                       android:maxLines="1"/>
                   <LinearLayout
                       android:layout_weight="1"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="@string/date"
                           android:fontFamily="@font/poppins_regular"
                           android:textStyle="bold" />
                       <TextView
                           android:id="@+id/bookingMenu_date"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="03-10-2020 "
                           android:fontFamily="@font/poppins_regular"
                         />
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="@string/time"
                           android:fontFamily="@font/poppins_regular"
                           android:textStyle="bold" />
                       <TextView
                           android:id="@+id/bookingMenu_time"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="2:00 PM "
                           android:fontFamily="@font/poppins_regular"
                           >
                       </TextView>
                   </LinearLayout>
               </LinearLayout>
           </LinearLayout>
           <Button
               android:id="@+id/bookingMenu_status"
               android:layout_width="match_parent"
               android:layout_height="30dp"
               android:text="Status"
               android:textColor="@color/colorWhite"
               android:fontFamily="@font/poppins_regular"
               android:layout_marginHorizontal="50dp"
               android:background="@drawable/buttonshape"
               android:textAlignment="center"
               >
           </Button>
       </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>